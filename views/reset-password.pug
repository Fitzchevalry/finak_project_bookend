doctype html
html
  head
    title Réinitialiser le mot de passe
  body
    h1 Réinitialiser le mot de passe
    if error
      p.error= error
    if success
      p.success= success
    form(action=`/reset-password/${token}` method="POST")
      label(for="password") Nouveau mot de passe:
      input(type="password" name="password" required)
      button(type="submit") Réinitialiser le mot de passe

script(src="/js/reset-pwd.js")
